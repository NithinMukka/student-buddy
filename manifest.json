{
  "manifest_version": 3,
  "name": "Student Buddy",
  "version": "1.0",
  "description": "Focus timer and website blocker for students.",
  "permissions": ["storage", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}
